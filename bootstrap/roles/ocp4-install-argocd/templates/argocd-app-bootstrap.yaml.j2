apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: bootstrap
  namespace: openshift-gitops
spec:
  destination:
    namespace: openshift-gitops
    server: "https://kubernetes.default.svc"
  source:
    path: gitops
    repoURL: "{{ bootstrap_url }}"
    targetRevision: "{{ bootstrap_branch }}"
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: false
